generator client {
  provider = "prisma-client-js"
}

datasource articles {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id          Int    @unique @default(autoincrement())
  title       String
  tag         String
  description String
  last_edited Int
  edit_count  Int
  status      Boolean @default(true)
  publicized  Boolean     @default(false)

}

model User {
  id            String @unique
  username      String
  discriminator String
  avatar        String
  rank          String @default("guest")
}
